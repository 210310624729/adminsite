   .floating-input {
        position: relative;
        margin-bottom: 30px;
   }

   .floating-input label {
        position: absolute;
        pointer-events: none;
        left: 10px;
        top: 10px;
        transition: 0.2s ease all;
        color: #999;
   }

   .floating-input input {
        font-size: 16px;
        padding: 10px;
        display: block;
        width: 100%;
        border: none;
        border-bottom: 1px solid #999;
        transition: 0.2s ease all;
   }

   .floating-input input:focus {
        outline: none;
        border-bottom: 2px solid #318CE7;
   }

   .floating-input input:focus+label,
   .floating-input input:valid+label {
        top: -12px;
        font-size: 12px;
        color: #318CE7;
   }
    .floating-input label {
         position: absolute;
