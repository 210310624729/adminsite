 /* Mobile menu styles */
 .mobile-menu {
      position: fixed;
      top: 0;
      left: -100%;
      width: 350px;
      height: 100vh;
      background-color: #ffffff;
      color: #070707;
      padding: 20px;
      transition: left 0.3s ease-in-out;
      z-index: 9999;
 }

 .mobile-menu.active {
      left: 0;
      padding: 0;
      margin: 0;
 }

 .mobile-menu ul {
      list-style-type: none;
      padding: 0;
      margin: 0;
 }

 .mobile-menu ul li {
      padding: 12px;
      font-size: 16px;
      border: none;
      margin: 0;
 }

 .mobile-menu ul li:hover {
      padding: 12px;
      font-size: 16px;
      background-color: rgba(113, 109, 109, 0.3);
      border: none;
      margin: 0;
 }

 .mobile-menu ul li a {
      color: #000000;
      text-decoration: none;
 }

 /* Button styles */
 .menu-button {
      width: 35px;
      height: 30px;
      background-color: transparent;
      color: white;
      border: none;


      cursor: pointer;
      display: flex;
      flex-direction: column;
      margin-left: 13px;
      margin-top: 15px;
      margin-right: 0px;
      justify-content: space-between;
 }

 .menu-button span {
      display: block;


      width: 100%;
      height: 5px;
      background-color: white;
 }


 .menu-button:before,
 .menu-button:after {
      content: "";
      position: absolute;
      width: 20px;
      height: 3px;
      background-color: white;
      top: 50%;
      left: 50%;

      transform: translate(-50%, -50%);
 }

 .menu-button:before {
      transform: translate(-50%, -50%) rotate(45deg);
 }

 .menu-button:after {
      transform: translate(-50%, -50%) rotate(-45deg);
 }

 /* Overlay styles */
 .overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100vh;
      background-color: rgba(0, 0, 0, 0.5);
      z-index: 9998;
      visibility: hidden;
      opacity: 0;
      transition: opacity 0.3s ease-in-out;
 }

 .overlay.active {
      visibility: visible;
      opacity: 1;
 }

 .mobile-menu div {
      height: 29%;
      padding: none;
      background-color: #318CE7;

 }

 .options li {
